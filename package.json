{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "lint": "next lint",
    "build:mkdir": "mkdir -p ./build/public || true",
    "build:mkdir2": "mkdir -p ./build/static || true",
    "build:cp": "cp -a ./.next/standalone/. ./build/ && cp -a ./public/. ./build/public/ && cp -a ./.next/static/. ./build/static/",
    "build:linux": "next build && npm run build:mkdir && npm run build:mkdir2 && npm run build:cp",
    "start": "cross-env HOSTNAME=0.0.0.0 node ./build/server.js"
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "js-sha256": "^0.11.0",
    "markdown-it": "^14.1.0",
    "moment": "^2.30.1",
    "next": "14.2.1",
    "react": "^18",
    "react-dom": "^18",
    "simplebar-react": "^3.2.6",
    "twemoji": "^14.0.2"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.3",
    "@types/markdown-it": "^14.1.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.1",
    "postcss": "^8",
    "semantic-release": "^23.0.8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
