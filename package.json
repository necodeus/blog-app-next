{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "lint": "next lint",
    "build": "cross-env next build",
    "build:release": "npm-run-all build mkdir copy",
    "mkdir": "cross-env mkdir -p ./build/.next ./build/public ./build/static",
    "copy": "npm-run-all copy:init copy:json copy:modules copy:public copy:static",
    "copy:init": "cp -r .next build",
    "copy:modules": "cp -r node_modules build",
    "copy:json": "cp package.json build",
    "copy:public": "cp -r public build",
    "copy:static": "cp -r .next/static build",
    "start": "cross-env HOSTNAME=0.0.0.0 next start"
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "js-sha256": "^0.11.0",
    "markdown-it": "^14.1.0",
    "moment": "^2.30.1",
    "next": "14.2.1",
    "react": "^18",
    "react-dom": "^18",
    "simplebar-react": "^3.2.6",
    "twemoji": "^14.0.2"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.3",
    "@types/markdown-it": "^14.1.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8",
    "semantic-release": "^23.0.8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
